/**app.wxss**/

.container {
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* box-sizing: border-box; */
  height: 100%;
  align-items: center;
}

page {
  background-color: #f4f8fc;
  color: #353535;
  position: relative;
}

.boder-b-n {
  border-bottom: none !important;
}

.flex-cloumn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10px;
}

.ds-flex {
  display: flex;
  flex-direction: row;
}

.flex-sb {
  justify-content: space-between;
  align-content: center;
}

.group-input {
  display: flex;
  font-size: 15px;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.group-input .form-left {
  width: 25%;
  margin-right: 20px;
}

.group-input .form-left-item {
  padding: 13px 0;
}

.group-input .form-right-detail {
  text-align: right;
  flex-grow: 1;
  color: #c7c7cc;
}

.group-input input, .group-input picker {
  padding: 10px 0;
  text-align: right;
  flex-grow: 1;
}

.textarea-input {
  font-size: 15px;
  min-height: 120px;
}

.textarea-input textarea {
  padding: 13px 0;
  width: 100% !important;
  flex-grow: 1;
}

.textarea-input .form-left {
  display: block;
  padding: 10px 0px;
}

.big-btn {
  width: 85%;
  margin: 20px auto;
  background-color: #1aad19;
  color: white;
  line-height: 40px;
  height: 40px;
}

.ds-line {
  display: inline-block;
}

