/**app.wxss**/

.container {
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* box-sizing: border-box; */
  height: 100%;
  align-items: center;
}

page {
  background-color: #f4f8fc;
  color: #353535;
  position: relative;
}

.boder-b-n {
  border-bottom: none !important;
}

.flex-cloumn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding:10px;
}

.group-input {
  display: flex;
  font-size: 15px;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.group-input .form-left {
  width: 25%;
  margin-right: 20px;
}

.group-input input, .group-input picker {
  padding: 10px 0;
  text-align: right;
  flex-grow: 1;
}

.textarea-input {
  font-size: 15px;
  min-height: 120px;
}

.textarea-input textarea {
  padding: 13px 0;
  width: 100% !important;
  flex-grow: 1;
}

.textarea-input .form-left {
  display: block;
  padding: 10px 0px;
}

.big-btn {
  width: 85%;
  margin: 20px auto;
  background-color: #1aad19;
  color: white;
  line-height: 40px;
  height: 40px;
}
.ds-line {
  display: inline-block;
}

/* font-size */
.ft-14{
  font-size:14px;
}
.ft-16{
  font-size:16px;
}
.dark-color{
  color:#808080;
}

/* margin padding */
.mt-10{
  margin-top:10px;
}


/*item右侧箭头*/
.content-item-right::before{
    content: "";
    display: inline-block;
    height: 9px;
    width: 9px;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    position: absolute;
    top: 50%;
    margin-top: -5px;
    right: 20px;
}
.content-item-down::before{
    content: "";
    display: inline-block;
    height: 9px;
    width: 9px;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: rotate(135deg);
    transform: rotate(135deg);
    position: absolute;
    top: 50%;
    margin-top: -5px;
    right: 20px;
}

view {
  font-size: 14px;
}
.brb {
  border-bottom:1px solid #f2f2f2;
}

.show {
  display: block !important;
}